{
    "name": "gw-dig",
    "version": "0.6.0",
    "description": "Map Digging components for Roguelikes",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "bundle": "rollup -c",
        "copy": "cp dist/gw-dig.js* docs/js && cp ../gw-utils/dist/gw-utils.js* docs/js && cp ../gw-utils/docs/js/manual.js docs/js  && cp ../gw-utils/docs/css/* docs/css",
        "build": "npm run bundle && npm run copy && npm run version",
        "serve": "cd docs && http-server -p 8080",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
        "coverage": "jest --coverage",
        "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "version": "node -e 'const v = require(\"./package.json\").version; console.log(v);' > docs/VERSION"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/funnisimo/gw-dig.git"
    },
    "keywords": [
        "roguelike",
        "map",
        "tile"
    ],
    "author": "Funnisimo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/funnisimo/gw-dig/issues"
    },
    "homepage": "https://github.com/funnisimo/gw-dig#readme",
    "devDependencies": {
        "@babel/types": "^7.23.9",
        "@jest/console": "^29.7.0",
        "@rollup/plugin-commonjs": "^25.0",
        "@rollup/plugin-node-resolve": "^15.2",
        "@rollup/plugin-terser": "^0.4",
        "@rollup/plugin-typescript": "^11.1",
        "@types/jest": "^29.5",
        "glob": "^10.3.10",
        "http-server": "^14.1.0",
        "jest": "^29.7",
        "jest-environment-node": "^29.7",
        "jest-extended": "^4.0",
        "prettier": "^3.2",
        "rollup": "^4.9",
        "rollup-plugin-dts": "^6.1",
        "terminal-kit": "^3.1.1",
        "ts-jest": "^29.1",
        "tslib": "^2.6",
        "typescript": "^5.3"
    },
    "peerDependencies": {
        "gw-utils": "^0.6.0"
    },
    "files": [
        "dist"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "dependencies": {
        "ts-node": "^10.9"
    }
}
