{
    "name": "gw-dig",
    "version": "0.5.0",
    "description": "Map Digging components for Roguelikes",
    "main": "dist/gw-dig.js",
    "browser": "dist/gw-dig.min.js",
    "module": "dist/gw-dig.mjs",
    "types": "dist/gw-dig.d.ts",
    "scripts": {
        "compile": "tsc --build tsconfig.json",
        "bundle": "rollup -c",
        "copy": "cp dist/gw-dig.js* docs/js && cp node_modules/gw-utils/dist/gw-utils.js* docs/js && cp node_modules/gw-map/dist/gw-map.js* docs/js && cp node_modules/gw-utils/docs/js/manual.js docs/js  && cp node_modules/gw-utils/docs/css/* docs/css",
        "build": "npm run compile && npm run bundle && npm run copy && npm run version",
        "serve": "cd docs && http-server -p 8080",
        "test": "jest --detectOpenHandles",
        "coverage": "jest --coverage",
        "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "version": "node -e 'const v = require(\"./package.json\").version; console.log(v);' > docs/VERSION"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/funnisimo/gw-dig.git"
    },
    "keywords": [
        "roguelike",
        "map",
        "tile"
    ],
    "author": "Funnisimo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/funnisimo/gw-dig/issues"
    },
    "homepage": "https://github.com/funnisimo/gw-dig#readme",
    "devDependencies": {
        "@babel/types": "^7.15.0",
        "@jest/console": "^27.1.0",
        "@jest/types": "^27.1.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@types/jest": "^27.0.1",
        "gw-utils": "^0.6.0",
        "http-server": "^0.12.3",
        "jest": "^27.1.0",
        "jest-environment-node": "^27.1.0",
        "jest-extended": "^0.11.5",
        "prettier": "^2.5.0",
        "rollup": "^2.60.2",
        "rollup-plugin-dts": "^3.0.2",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^27.0.5",
        "typescript": "^4.5.2"
    },
    "peerDependencies": {
        "gw-utils": "^0.6.0"
    },
    "files": [
        "dist"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    }
}
